@{
    ViewBag.Title = "XacNhanThongTin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using doannhom.Models
@model KhachHang

<h2>Xác nhận thông tin</h2>
<form action="/Home/LuuDatHang" method="post">
    <p>Tên: @Model.TenKH</p>
    <p>Địa chỉ: @Model.DiaChi</p>
    <p>Số điện thoại: @Model.DienThoai</p>
    <p>Ngày đặt hàng: @DateTime.Now.ToShortDateString()</p>
    <p>Ngày hẹn giao: <input type="date" name="txtNgayHen" /></p>

    <input type="submit" value="Đồng ý" />
</form>
