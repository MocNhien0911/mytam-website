<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Tạo tài khoản Admin</h3>
                        <form action="/QuanLy/XLDK" method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input type="text" id="firstName" name="txtten" class="form-control form-control-lg" />
                                        <label class="form-label" for="firstName">Tên nhân viên</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">


                                    <div class="form-outline">
                                        <input type="text" name="txtdiachi" id="lastName" class="form-control form-control-lg" />
                                        <label class="form-label" for="lastName">Địa chỉ</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div class="form-outline">
                                        <input type="text" id="username" name="txtnv" class="form-control form-control-lg" />
                                        <label class="form-label" for="username">Tài khoản</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">

                                    <input type="password" id="password" name="txtpass" class="form-control form-control-lg" />
                                    <label class="form-label" for="password">Mật khẩu</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input type="text" name="txtemail" id="emailAddress" class="form-control form-control-lg" />
                                        <label class="form-label" for="emailAddress">Email</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input type="text" id="phoneNumber" name="txtdt" class="form-control form-control-lg" />
                                        <label class="form-label" for="phoneNumber">Phone Number</label>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                Giới tính
                                <input type="radio" class="col-md-4" name="gioitinh" value="Nam" checked /> Nam <br />
                                <input type="radio" class="col-md-4" name="gioitinh" value="Nữ" /> Nữ <br />
                            </div>
                            <div class="row">
                                <div class="mt-4 pt-2 col-md-6">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Đăng ký" />
                                    @*<input class="btn btn-primary btn-lg" type="submit" value="Submit" />*@
                                </div>
                                <div class="mt-4 pt-2 col-md-6">
                                    
                                    <a class="nav-link btn btn-primary btn-lg" href="/QuanLy/DangNhap">Đăng nhập</a>



                                    @*<input class="btn btn-primary btn-lg" type="submit" value="Submit" />*@
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
